<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_indivd_layout"
        android:paddingBottom="25dp">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_category"
            android:textSize="24sp" android:paddingBottom="20dp" android:paddingStart="20dp" android:paddingTop="10dp"
            android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_category_items"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_ct1"
                android:layout_weight="1">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                    android:id="@+id/percursos_main_recycler_ct1_image" android:paddingBottom="10dp"
                    android:paddingTop="5dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_ct1_text"
                    android:gravity="center"
                    android:paddingBottom="10dp" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_ct2"
                android:layout_weight="1">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                    android:id="@+id/percursos_main_recycler_ct2_image" android:paddingBottom="10dp"
                    android:paddingTop="5dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_ct2_text"
                    android:gravity="center"
                    android:paddingBottom="10dp" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_ct3"
                android:layout_weight="1">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                    android:id="@+id/percursos_main_recycler_ct3_image" android:paddingBottom="10dp"
                    android:paddingTop="5dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/percursos_main_recycler_ct3_text"
                    android:gravity="center"
                    android:paddingBottom="10dp" android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>